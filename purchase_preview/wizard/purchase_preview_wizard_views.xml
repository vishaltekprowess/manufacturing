<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_preview_wizard_form" model="ir.ui.view">
        <field name="name">purchase.preview.wizard.form</field>
        <field name="model">purchase.preview.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Preview Link">
                <group>
                    <field name="order_id" invisible="1"/>
                    <field name="partner_id" options="{'no_create': True}"/>
                    <field name="preview_link" widget="CopyClipboardChar" readonly="1" invisible="not partner_id"/>
                </group>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
