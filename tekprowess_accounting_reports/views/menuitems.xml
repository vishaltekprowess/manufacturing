<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu: Financial Reports -->
    <menuitem id="menu_tekprowess_financial_reports_root"
              name="Financial Reports"
              parent="account.menu_finance_reports"
              sequence="10"/>

    <!-- Dashboard Menu -->
    <menuitem id="menu_tekprowess_dashboard"
              name="Dashboard"
              parent="account.menu_finance"
              action="account.open_account_journal_dashboard_kanban"
              sequence="0"/>

    <!-- Wizard Menu Item -->
    <menuitem id="menu_financial_report_wizard"
              name="Generate Report"
              parent="menu_tekprowess_financial_reports_root"
              action="action_financial_report_wizard"
              sequence="1"/>

    <!-- Separator -->
    <menuitem id="menu_financial_reports_separator"
              name="─────────────────"
              parent="menu_tekprowess_financial_reports_root"
              sequence="5"/>

    <!-- Individual Report Menus -->
    
    <!-- Profit & Loss -->
    <record id="action_profit_loss_report" model="ir.actions.act_window">
        <field name="name">Profit &amp; Loss</field>
        <field name="res_model">financial.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_report_type': 'profit_loss'}</field>
    </record>
    
    <menuitem id="menu_profit_loss_report"
              name="Profit &amp; Loss"
              parent="menu_tekprowess_financial_reports_root"
              action="action_profit_loss_report"
              sequence="10"/>

