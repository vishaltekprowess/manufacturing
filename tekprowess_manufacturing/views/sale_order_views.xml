<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Sale Order Form View -->
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.manufacturing</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <!-- Add stat button and action button for MO -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_manufacturing_orders" type="object" 
                        class="oe_stat_button" icon="fa-cogs"
                        invisible="manufacturing_order_count == 0">
                    <field name="manufacturing_order_count" widget="statinfo" string="Manufacturing Orders"/>
                </button>
            </xpath>
            
            <!-- Add button to create MOs -->
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="action_create_manufacturing_orders" type="object" 
                        string="Create MO" class="btn-primary"
                        invisible="state != 'sale' or not require_manufacturing or manufacturing_order_count > 0"/>
            </xpath>
            
            <!-- Add manufacturing status -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="require_manufacturing" invisible="1"/>
                <field name="manufacturing_state" invisible="1"/>
            </xpath>
            
        </field>
    </record>
    
    <!-- Sale Order Tree View -->
    <record id="view_sale_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.manufacturing</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="manufacturing_state" optional="hide" widget="badge"
                       decoration-info="manufacturing_state == 'to_produce'"
                       decoration-warning="manufacturing_state == 'in_production'"
                       decoration-success="manufacturing_state == 'produced'"/>
            </xpath>
        </field>
    </record>
    
</odoo>
