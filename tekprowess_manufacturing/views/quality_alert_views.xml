<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Quality Alert Form View -->
    <record id="view_quality_alert_form" model="ir.ui.view">
        <field name="name">manufacturing.quality.alert.form</field>
        <field name="model">manufacturing.quality.alert</field>
        <field name="arch" type="xml">
            <form string="Quality Alert">
                <header>
                    <button name="action_assign_to_me" string="Assign to Me" type="object" 
                            class="oe_highlight" invisible="assigned_to"/>
                    <button name="action_in_progress" string="In Progress" type="object" 
                            class="oe_highlight" invisible="state != 'open'"/>
                    <button name="action_resolve" string="Resolve" type="object" 
                            class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_close" string="Close" type="object" 
                            invisible="state != 'resolved'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Alert Title"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="production_id"/>
                            <field name="product_id"/>
                            <field name="quality_check_id"/>
                        </group>
                        <group>
                            <field name="alert_type"/>
                            <field name="priority" widget="priority"/>
                            <field name="affected_quantity"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="reported_by"/>
                            <field name="reported_date"/>
                        </group>
                        <group>
                            <field name="assigned_to"/>
                            <field name="resolved_date" invisible="state not in ['resolved', 'closed']"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Describe the quality issue..."/>
                        </page>
                        <page string="Analysis">
                            <group>
                                <field name="root_cause" placeholder="Root cause analysis..."/>
                            </group>
                        </page>
                        <page string="Actions">
                            <group>
                                <field name="corrective_action" placeholder="Corrective actions taken..."/>
                                <field name="preventive_action" placeholder="Preventive actions for the future..."/>
                            </group>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>
    
    <!-- Quality Alert Tree View -->
    <record id="view_quality_alert_tree" model="ir.ui.view">
        <field name="name">manufacturing.quality.alert.tree</field>
        <field name="model">manufacturing.quality.alert</field>
        <field name="arch" type="xml">
            <list string="Quality Alerts" decoration-danger="priority == '3'"
                  decoration-warning="priority == '2'">
                <field name="name"/>
                <field name="production_id"/>
                <field name="product_id"/>
                <field name="alert_type"/>
                <field name="priority" widget="priority"/>
                <field name="assigned_to"/>
                <field name="reported_date"/>
                <field name="state" widget="badge" decoration-info="state == 'open'"
                       decoration-warning="state == 'in_progress'"
                       decoration-success="state in ['resolved', 'closed']"/>
            </list>
        </field>
    </record>
    
    <!-- Quality Alert Search View -->
    <record id="view_quality_alert_search" model="ir.ui.view">
        <field name="name">manufacturing.quality.alert.search</field>
        <field name="model">manufacturing.quality.alert</field>
        <field name="arch" type="xml">
            <search string="Quality Alerts">
                <field name="name"/>
                <field name="production_id"/>
                <field name="product_id"/>
                <field name="assigned_to"/>
                <filter string="My Alerts" name="my_alerts" 
                        domain="[('assigned_to', '=', uid)]"/>
                <filter string="Unassigned" name="unassigned" 
                        domain="[('assigned_to', '=', False)]"/>
                <filter string="Open" name="open" 
                        domain="[('state', '=', 'open')]"/>
                <filter string="In Progress" name="in_progress" 
                        domain="[('state', '=', 'in_progress')]"/>
                <filter string="High Priority" name="high_priority" 
                        domain="[('priority', 'in', ['2', '3'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Alert Type" name="group_type" context="{'group_by': 'alert_type'}"/>
                    <filter string="Assigned To" name="group_assigned" context="{'group_by': 'assigned_to'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Quality Alert Action -->
    <record id="action_quality_alert" model="ir.actions.act_window">
        <field name="name">Quality Alerts</field>
        <field name="res_model">manufacturing.quality.alert</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_open': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No quality alerts found
            </p>
        </field>
    </record>
    
    <!-- Related Quality Alert Action (from quality check) -->
    <record id="action_quality_alert_related" model="ir.actions.act_window">
        <field name="name">Related Quality Alert</field>
        <field name="res_model">manufacturing.quality.alert</field>
        <field name="view_mode">form</field>
        <field name="domain">[('quality_check_id', '=', active_id)]</field>
    </record>
    
</odoo>
