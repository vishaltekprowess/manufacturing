<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Quality Point Form View -->
    <record id="view_quality_point_form" model="ir.ui.view">
        <field name="name">manufacturing.quality.point.form</field>
        <field name="model">manufacturing.quality.point</field>
        <field name="arch" type="xml">
            <form string="Quality Point">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="check_type"/>
                            <field name="check_point"/>
                            <field name="mandatory"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="product_tmpl_id"/>
                            <field name="bom_id" domain="[('product_id', '=', product_id)]"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Measurement Criteria" invisible="check_type != 'measurement'">
                        <group>
                            <field name="norm"/>
                        </group>
                        <group>
                            <field name="tolerance_min"/>
                            <field name="tolerance_max"/>
                        </group>
                    </group>
                    <group string="Instructions">
                        <field name="instructions" placeholder="Detailed instructions for performing this check..." nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Quality Point Tree View -->
    <record id="view_quality_point_tree" model="ir.ui.view">
        <field name="name">manufacturing.quality.point.tree</field>
        <field name="model">manufacturing.quality.point</field>
        <field name="arch" type="xml">
            <list string="Quality Points">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="check_type"/>
                <field name="check_point"/>
                <field name="product_id"/>
                <field name="bom_id"/>
                <field name="mandatory"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- Quality Check Form View -->
    <record id="view_quality_check_form" model="ir.ui.view">
        <field name="name">manufacturing.quality.check.form</field>
        <field name="model">manufacturing.quality.check</field>
        <field name="arch" type="xml">
            <form string="Quality Check">
                <header>
                    <button name="action_start" string="Start" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_pass" string="Pass" type="object" 
                            class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_fail" string="Fail" type="object" 
                            class="btn-danger" invisible="state != 'in_progress'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(action_quality_alert_related)d" 
                                type="action" icon="fa-exclamation-triangle" 
                                invisible="result != 'fail'">
                            <div class="o_stat_info">
                                <span class="o_stat_text">View Alert</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Check Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="production_id"/>
                            <field name="workorder_id"/>
                            <field name="product_id"/>
                            <field name="quality_point_id"/>
                        </group>
                        <group>
                            <field name="check_type"/>
                            <field name="mandatory"/>
                            <field name="inspector_id"/>
                            <field name="check_date"/>
                        </group>
                    </group>
                    
                    <group string="Check Details">
                        <group>
                            <field name="norm"/>
                            <field name="tolerance_min" invisible="check_type != 'measurement'"/>
                            <field name="tolerance_max" invisible="check_type != 'measurement'"/>
                        </group>
                        <group>
                            <field name="measured_value" invisible="check_type != 'measurement'"/>
                            <field name="result" widget="badge" 
                                   decoration-success="result == 'pass'"
                                   decoration-danger="result == 'fail'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Observations and comments..."/>
                        </page>
                        <page string="Corrective Action" invisible="result != 'fail'">
                            <field name="corrective_action" placeholder="Describe corrective actions taken..."/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>
    
    <!-- Quality Check Tree View -->
    <record id="view_quality_check_tree" model="ir.ui.view">
        <field name="name">manufacturing.quality.check.tree</field>
        <field name="model">manufacturing.quality.check</field>
        <field name="arch" type="xml">
            <list string="Quality Checks" decoration-success="state == 'done' and result == 'pass'"
                  decoration-danger="state == 'failed' or result == 'fail'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="production_id"/>
                <field name="product_id"/>
                <field name="check_type"/>
                <field name="inspector_id"/>
                <field name="check_date"/>
                <field name="result" widget="badge" decoration-success="result == 'pass'"
                       decoration-danger="result == 'fail'"/>
                <field name="state" widget="badge" decoration-info="state in ['draft', 'in_progress']"
                       decoration-success="state == 'done'" decoration-danger="state == 'failed'"/>
                <field name="mandatory" invisible="1"/>
            </list>
        </field>
    </record>
    
    <!-- Quality Check Action -->
    <record id="action_quality_check" model="ir.actions.act_window">
        <field name="name">Quality Checks</field>
        <field name="res_model">manufacturing.quality.check</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No quality checks found
            </p>
        </field>
    </record>
    
    <!-- Quality Point Action -->
    <record id="action_quality_point" model="ir.actions.act_window">
        <field name="name">Quality Points</field>
        <field name="res_model">manufacturing.quality.point</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first quality point
            </p>
        </field>
    </record>
    
</odoo>
