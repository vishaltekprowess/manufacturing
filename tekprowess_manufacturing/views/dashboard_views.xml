<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =====================================================================
         Manufacturing Dashboard Action
         ===================================================== -->
    <record id="action_tekprowess_mfg_dashboard" model="ir.actions.client">
        <field name="name">Manufacturing Dashboard</field>
        <field name="tag">manufacturing_dashboard</field>
        <field name="context">{"dashboard_section": "manufacturing"}</field>
    </record>

    <!-- Sales Dashboard Action -->
    <record id="action_tekprowess_sale_dashboard" model="ir.actions.client">
        <field name="name">Sales Dashboard</field>
        <field name="tag">manufacturing_dashboard</field>
        <field name="context">{"dashboard_section": "sales"}</field>
    </record>

    <!-- Purchase Dashboard Action -->
    <record id="action_tekprowess_purchase_dashboard" model="ir.actions.client">
        <field name="name">Purchase Dashboard</field>
        <field name="tag">manufacturing_dashboard</field>
        <field name="context">{"dashboard_section": "purchase"}</field>
    </record>

    <!-- =====================================================================
         Menu Items
         ===================================================== -->

    <!-- Manufacturing > Dashboard -->
    <menuitem
        id="menu_tekprowess_mfg_dashboard"
        name="Dashboard"
        parent="mrp.menu_mrp_root"
        action="action_tekprowess_mfg_dashboard"
        sequence="0"/>

    <!-- Sales > Dashboard -->
    <menuitem
        id="menu_tekprowess_sale_dashboard"
        name="Dashboard"
        parent="sale.sale_menu_root"
        action="action_tekprowess_sale_dashboard"
        sequence="0"/>

    <!-- Purchase > Dashboard -->
    <menuitem
        id="menu_tekprowess_purchase_dashboard"
        name="Dashboard"
        parent="purchase.menu_purchase_root"
        action="action_tekprowess_purchase_dashboard"
        sequence="0"/>

</odoo>
