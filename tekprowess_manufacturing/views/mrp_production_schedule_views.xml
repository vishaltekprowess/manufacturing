<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Production Schedule Form View -->
    <record id="view_production_schedule_form" model="ir.ui.view">
        <field name="name">manufacturing.production.schedule.form</field>
        <field name="model">manufacturing.production.schedule</field>
        <field name="arch" type="xml">
            <form string="Production Schedule">
                <header>
                    <button name="%(action_mrp_production_wizard)d" type="action" 
                            string="Create MO" class="oe_highlight"
                            context="{'default_product_id': product_id, 'default_product_qty': planned_quantity}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Schedule Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="workcenter_id"/>
                        </group>
                        <group>
                            <field name="planned_date"/>
                            <field name="planned_quantity"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Manufacturing Orders">
                            <field name="production_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="date_start"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Production Schedule Tree View -->
    <record id="view_production_schedule_tree" model="ir.ui.view">
        <field name="name">manufacturing.production.schedule.tree</field>
        <field name="model">manufacturing.production.schedule</field>
        <field name="arch" type="xml">
            <list string="Production Schedules">
                <field name="name"/>
                <field name="product_id"/>
                <field name="planned_date"/>
                <field name="planned_quantity"/>
                <field name="workcenter_id"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>
    
    <!-- Production Schedule Calendar View -->
    <record id="view_production_schedule_calendar" model="ir.ui.view">
        <field name="name">manufacturing.production.schedule.calendar</field>
        <field name="model">manufacturing.production.schedule</field>
        <field name="arch" type="xml">
            <calendar string="Production Schedule" date_start="planned_date" color="product_id">
                <field name="name"/>
                <field name="product_id"/>
                <field name="planned_quantity"/>
            </calendar>
        </field>
    </record>
    
    <!-- Production Schedule Action -->
    <record id="action_production_schedule" model="ir.actions.act_window">
        <field name="name">Production Schedule</field>
        <field name="res_model">manufacturing.production.schedule</field>
        <field name="view_mode">list,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first production schedule
            </p>
        </field>
    </record>
    
</odoo>
