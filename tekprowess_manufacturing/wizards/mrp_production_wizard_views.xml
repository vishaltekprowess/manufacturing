<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Manufacturing Order Wizard Form -->
    <record id="view_mrp_production_wizard_form" model="ir.ui.view">
        <field name="name">mrp.production.wizard.form</field>
        <field name="model">mrp.production.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Manufacturing Order">
                <group>
                    <group>
                        <field name="product_id"/>
                        <field name="bom_id"/>
                        <field name="product_qty"/>
                        <field name="product_uom_id"/>
                    </group>
                    <group>
                        <field name="production_type"/>
                        <field name="priority" widget="priority"/>
                        <field name="date_start"/>
                        <field name="sale_order_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_production" string="Create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Manufacturing Order Wizard Action -->
    <record id="action_mrp_production_wizard" model="ir.actions.act_window">
        <field name="name">Create Manufacturing Order</field>
        <field name="res_model">mrp.production.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>
