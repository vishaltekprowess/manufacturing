<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Quality Points -->
        <record id="quality_point_visual_inspection" model="manufacturing.quality.point">
            <field name="name">Visual Inspection</field>
            <field name="check_type">visual</field>
            <field name="check_point">final</field>
            <field name="mandatory">True</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="quality_point_dimension_check" model="manufacturing.quality.point">
            <field name="name">Dimension Check</field>
            <field name="check_type">measurement</field>
            <field name="check_point">production</field>
            <field name="mandatory">True</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="quality_point_functional_test" model="manufacturing.quality.point">
            <field name="name">Functional Test</field>
            <field name="check_type">test</field>
            <field name="check_point">final</field>
            <field name="mandatory">True</field>
            <field name="sequence">30</field>
        </record>
        
    </data>
</odoo>
